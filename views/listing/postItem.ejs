<% layout("/layouts/boilerplate") %>


<div class="postItem_container">
    <h2>Post your Item</h2>
    <form method="post" action="/farmer/<%= currUser._id %>/postItem" enctype="multipart/form-data">
        <div class="form-group">
            <div class="form-group col-md-6 mt-3">
                <label for="category">Select category</label>
                <select name="list[category]" class="form-control">
                    <option>select category</option>
                    <option value="crops">Crops</option>
                    <option value="vegi">Vegitable</option>
                    <option value="fruits">Fruits</option>
                    <option value="spices">Spices</option>
                </select>
            </div>
            <div class="form-group col-md-6 mt-3">
                <label for="formGroupExampleInput">Enter Title</label>
                <input type="text" name="list[name]" class="form-control" id="formGroupExampleInput" placeholder="Enter title">
            </div>
            <div class="form-group col-md-6 mt-3">
                <label for="formGroupExampleInput2">Enter Description</label>
                <textarea name="list[desc]" id="" cols="30" rows="5" class="form-control" id="formGroupExampleInput2" placeholder="Enter Description"></textarea>
            </div>
            <div class="form-group col-md-6 mt-3">
                <label for="formGroupExampleInput2">Item Quantity</label>
                <input type="text" name="list[quantity]" class="form-control" id="formGroupExampleInput2" placeholder="Enter Quantity (ex - 20 kg)">
            </div>
            <div class="form-group col-md-6 mt-3">
                <label for="formGroupExampleInput2">Expected Price</label>
                <input type="text"  name="list[price]" class="form-control" id="formGroupExampleInput2" placeholder="Enter price">
            </div>
            <div class="form-group col-md-6 mt-3">
                <label for="formGroupExampleInput2">Upload product image</label>
                <input type="file" name="list[image]" class="form-control" id="formGroupExampleInput2" placeholder="Upload image">
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary mb-2">Post Item</button>
            </div>
        </div>
    </form>
</div>